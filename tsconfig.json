{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2015",
    "lib": [
      "es7",
      "es2018"
    ],
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "build/",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": [
    "components"
  ]
}
